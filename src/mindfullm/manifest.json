{
    "manifest_version": 3,
    "name": "MindfuLLM Extension",
    "version": "1.1.0",
    "icons": {
        "16": "images/icons/favicon_16.png",
        "32": "images/icons/favicon_32.png",
        "64": "images/icons/favicon_64.png",
        "128": "images/icons/favicon_128.png"
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://chat.com/*",
        "https://chat.openai.com/*"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://chat.com/*",
                "https://chat.openai.com/*",
                "https://elm.edina.ac.uk/elm/elm"
            ],
            "js": [
                "modules/jquery-3.7.1.min.js",
                "modules/store.js",
                "scripts/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup/index.html"
    }
}